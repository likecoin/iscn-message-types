{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2017"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "newLine": "LF",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "dist/module",
    "pretty": true,
    "rootDir": "src",
    "removeComments": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "include": [
    "src/index.ts",
    "src/cosmos/bank/v1beta1/tx.ts",
    "src/cosmos/tx/v1beta1/tx.ts",
    "src/cosmos/crypto/secp256k1/keys.ts",
    "src/iscn",
    "src/nft",
    "src/likenft",
  ]
}